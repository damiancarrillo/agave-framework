<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                            http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Conway's Game of Life'</display-name>
	<filter>
		<filter-name>AgaveFilter</filter-name>
		<filter-class>agave.AgaveFilter</filter-class>
		<init-param>
			<param-name>loggingLevel</param-name>
			<param-value>INFO</param-value>
		</init-param>
		<init-param>
			<param-name>classesDirectory</param-name>
			<param-value>/home/damian/dev/trunk/agave/samples/game-of-life/target/classes</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AgaveFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>agave.samples.gameOfLife.web.FreemarkerContextListener</listener-class>
	</listener>
	<mime-mapping>
		<extension>xhtml</extension>
		<mime-type>application/xhtml+xml</mime-type>
	</mime-mapping>
	<welcome-file-list>
		<welcome-file>/init</welcome-file>
	</welcome-file-list>
</web-app>